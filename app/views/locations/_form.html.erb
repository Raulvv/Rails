<% if @locations.errors.any? %>
	<ul>
		<% @locations.errors.full_messages.each do |errors| %>
		<li><%= errors %></li>
		<% end %>
	</ul>
<% end %>


<%= form_for [@locations] do |f| %>
	<%= f.label :name %>
	<%= f.text_field :name %>
	<br>
	<%= f.label :city %>
	<%= f.text_field :city %>
	<br>
	<%= f.label :country %>
	<%= f.text_field :country %>
	<br>
	<%= f.label :zip_code %>
	<%= f.text_field :zip_code %>
	<br>
	<%= f.label :street %>
	<%= f.text_field :street %>
	<br>
	<%= f.label :latitude %>
	<%= f.text_field :latitude %>
	<br>
	<%= f.label :longitude %>
	<%= f.text_field :longitude %>
	<br>
	<%= f.label :description %>
	<%= f.text_field :description %>
	<br>
	
	<%= f.submit "Save" %>
<% end %>

<%= link_to "Cancel", locations_path %>