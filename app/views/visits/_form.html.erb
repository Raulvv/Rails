
<% if @visit.errors.any? %>
	<ul>
		<% @visit.errors.full_messages.each do |errors| %>
		<li><%= errors %></li>
		<% end %>
	</ul>
<% end %>


<%= form_for [@location, @visit] do |f| %>
	<%= f.select(:user_id, User.all.map {|user| [ user.name, user.id ] }) %>
	<br>
	<%= f.label :user_name %>
	<%= f.text_field :user_name %>
	
	<%= f.datetime_select(:from_date, default:Time.now + 1.days) %>
	<br>
	<%= f.datetime_select(:to_date, default:Time.now + 1.days) %>
	<br>
	<%= f.submit "Save" %>
<% end %>

<%= link_to "Cancel", location_visits_path(@location) %>