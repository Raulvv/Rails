<% if @user.errors.any? %>
	<ul>
		<% @user.errors.full_messages.each do |errors| %>
		<li><%= errors %></li>
		<% end %>
	</ul>
<% end %>

<%= form_for [@user] do |f| %>
 	<%= f.label :name %>
	 <%= f.text_field :name %>
	 <br/>
	 <%= f.label :email %>
 	<%= f.text_field :email %>
 	<br/>
 	<%= f.submit "Save" %>
 	<%= link_to "Cancel", users_path %>
<% end %>